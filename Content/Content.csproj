    <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
        <!-- Debug 配置追加符号 -->
        <DefineConstants>$(DefineConstants);MyDebug</DefineConstants>
    </PropertyGroup>
    
    <ItemGroup>
        <None Update="Assets\**">
